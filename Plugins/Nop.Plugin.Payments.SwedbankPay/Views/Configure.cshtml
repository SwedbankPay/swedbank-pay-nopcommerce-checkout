@model Nop.Plugin.Payments.SwedbankPay.SwedbankPayPaymentSettings
@inject Nop.Core.IWebHelper webHelper
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")

<script>
	$(document).ready(function () {
        $("#@Html.IdFor(model => model.PassProductNamesAndTotals)").click(togglePassProductNamesAndTotals);
	    togglePassProductNamesAndTotals();
	});

    function togglePassProductNamesAndTotals() {
        warningValidation('@Url.Action("RoundingWarning", "PaymentSwedbankPay")', '@Html.NameFor(model => model.PassProductNamesAndTotals)',
            { passProductNamesAndTotals: $('#@Html.IdFor(model => model.PassProductNamesAndTotals)').is(':checked') });
    }
</script>

<form asp-controller="PaymentSwedbankPay" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw(T("Plugins.Payments.SwedbankPay.Instructions", $"{webHelper.GetStoreLocation()}Plugins/SwedbankPay/PDTHandler"))
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="UseDevelopmentMode_OverrideForStore" asp-input="UseDevelopmentMode" asp-store-scope="@Model.UseDevelopmentMode" />
                        <nop-label asp-for="UseDevelopmentMode" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="UseDevelopmentMode" />
                        <span asp-validation-for="UseDevelopmentMode"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="DevelopmentEnvironment_OverrideForStore" asp-input="DevelopmentEnvironment" asp-store-scope="@Model.DevelopmentEnvironment" />
                        <nop-label asp-for="DevelopmentEnvironment" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="DevelopmentEnvironment" />
                        <span asp-validation-for="DevelopmentEnvironment"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="DevelopmentMerchantToken_OverrideForStore" asp-input="DevelopmentMerchantToken" asp-store-scope="@Model.DevelopmentMerchantToken" />
                        <nop-label asp-for="DevelopmentMerchantToken" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="DevelopmentMerchantToken" />
                        <span asp-validation-for="DevelopmentMerchantToken"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="BusinessEmail_OverrideForStore" asp-input="BusinessEmail" asp-store-scope="@Model.BusinessEmail" />
                        <nop-label asp-for="BusinessEmail" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="BusinessEmail" />
                        <span asp-validation-for="BusinessEmail"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="MerchantToken_OverrideForStore" asp-input="PdtToken" asp-store-scope="@Model.MerchantToken" />
                        <nop-label asp-for="MerchantToken" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MerchantToken" />
                        <span asp-validation-for="MerchantToken"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="PassProductNamesAndTotals_OverrideForStore" asp-input="PassProductNamesAndTotals" asp-store-scope="@Model.PassProductNamesAndTotals" />
                        <nop-label asp-for="PassProductNamesAndTotals" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="PassProductNamesAndTotals" />
                        <span asp-validation-for="PassProductNamesAndTotals"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="AdditionalFee_OverrideForStore" asp-input="AdditionalFee" asp-store-scope="@Model.AdditionalFee" />
                        <nop-label asp-for="AdditionalFee" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalFee" />
                        <span asp-validation-for="AdditionalFee"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="AdditionalFeePercentage_OverrideForStore" asp-input="AdditionalFeePercentage" asp-store-scope="@Model.AdditionalFeePercentage" />
                        <nop-label asp-for="AdditionalFeePercentage" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalFeePercentage" />
                        <span asp-validation-for="AdditionalFeePercentage"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>